<!--部分テンプレート　-->


<!--px-5左右のパディング5rem(基本の5倍)、px-sm-0小以上で左右のパディング0-->

<div class = "col-md-3">
  <h2>User info</h2>
  <p><%= image_tag user.get_profile_image(100,100) %></p>
  <table class = "table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class = "row">
    <%= link_to edit_user_path(user.id), class: 'btn btn-block btn-outline-secondary' do%>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>

  <h2 class = "mt-3" >New osake</h2>
  <%= form_with model: osakenew, method: :post do |f| %>
    <%= f.label :title, 'Title' %><br />
    <%= f.text_field :title, autofocus: true, class: 'w-100' %><br />

    <%= f.label :body, 'Opinion' %><br />
    <%= f.text_area :body, autofocus: true, class: 'w-100' %><br />

    <%= f.submit "Create Osake", class: 'btn btn-success' %>

  <% end %>
</div>