<!--Users#edit-->
<div class ="container px-5 px-sm-0">
  <div class = "row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= render 'osakes/error', model: @user, method: :patch %>
      <%= form_with model:@user do |f| %>
        <%= f.label :name, 'Name' %><br/>
        <%= f.text_field :name, autofocus:true %><br/>
        <%= f.label :profile_image, 'Image' %><br/>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br/>
        <%= f.label :introduction, 'introduction' %><br/>
        <%= f.text_area :introduction, autofocus:true %><br/>
        <%= f.submit 'Update User' , class: 'btn btn-secondary' %><br/>
      <% end %>
    </div>
  </div>
</div>